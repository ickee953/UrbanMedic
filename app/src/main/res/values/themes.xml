<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/brand</item>
        <item name="buttonStyle">@style/BrandButtonTheme</item>
        <item name="textInputStyle">@style/BrandTextInputLayoutTheme</item>
        <item name="editTextStyle">@style/BrandEditTextTheme</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.TestApp" parent="Base.Theme.TestApp" />

    <style name="BrandButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand</item>
        <!--<item name="colorAccent">@color/brand</item>-->
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:height">56dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:spacing">0.18sp</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->

    </style>

    <style name="BrandTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/dark_gray</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="endIconTint">@color/white</item>
        <item name="endIconMode">none</item>
        <item name="errorIconTint">@null</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/warning</item>
        <item name="android:colorError">@color/text_primary</item>
    </style>

    <style name="BrandEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="BrandTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">Roboto</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>
</resources>