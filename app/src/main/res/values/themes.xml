<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!--<item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/brand</item>-->
        <item name="colorError">@color/warning</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/brand</item>
        <item name="android:buttonStyle">@style/BrandButtonTheme</item>
        <item name="textInputStyle">@style/BrandTextInputLayoutTheme</item>
        <item name="editTextStyle">@style/BrandEditTextTheme</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!--<item name="actionBarTheme">@style/CustomActionBarTheme</item>-->
    </style>

    <style name="CustomToolBarTheme" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BrandButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:height">56dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:fontWeight">500</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">20sp</item>
        <item name="android:spacing">0.18sp</item>
    </style>

    <style name="CustomButtonToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="android:innerRadius">6dp</item>
    </style>

    <style name="CustomToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/toggle_button_background_selector</item>
        <item name="rippleColor">@color/tab_bar_color</item>
        <item name="tabRippleColor">@color/tab_bar_color</item>
        <item name="android:textColor">@color/toggle_button_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:spacing">0.15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="strokeColor">@color/tab_bar_color</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="BrandTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeErrorColor">@color/warning</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="helperTextEnabled">false</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <!--<item name="endIconTint">@color/white</item>
        <item name="endIconMode">none</item>-->
        <item name="endIconCheckable">false</item>
        <item name="errorIconTint">@null</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/warning</item>
        <item name="errorEnabled">false</item>
        <item name="android:colorError">@color/text_primary</item>
    </style>

    <style name="BrandEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="BrandTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">Roboto</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="TitleTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="lineHeight">22sp</item>
        <item name="fontWeight">400</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingLeft">32dp</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

</resources>